{
  "manifest_version": 3,
  "name": "textval",
  "version": "1.0",
  "description": "ブラウザ上の文章をお祭りっぽく変換します。",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["kuromoji.js", "dict/*.dat.gz", "fonts/*", "img/*.jpg"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "img/new-kakigori-kun-16.png",
    "32": "img/new-kakigori-kun-32.png",
    "48": "img/new-kakigori-kun-48.png",
    "128": "img/new-kakigori-kun-128.png"
  }
}